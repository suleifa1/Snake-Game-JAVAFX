<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER"  prefHeight="440.0" prefWidth="600.0" spacing="20.0" stylesheets="@../css/menu.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.suleimanovfaiz_uur_sp.Menu">
    <Button fx:id="startButton" prefHeight="43.0" prefWidth="163.0" text="Start Game" />
    <Button fx:id="settingsButton" text="Settings" />
   <Button fx:id="showBoard" mnemonicParsing="false" text="Leaders" />
    <Button fx:id="exitButton" onAction="#onExit" prefHeight="0.0" prefWidth="95.0" text="Exit" />
    <AnchorPane prefHeight="0.0" prefWidth="536.0">
        <children>
            <ImageView fx:id="volume" fitHeight="64.0" fitWidth="64.0" onMouseClicked="#setVolume" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="10">
                <image>
                    <Image url="@../images/no.png" />
                </image>
            </ImageView>
        </children>
    </AnchorPane>

</VBox>
